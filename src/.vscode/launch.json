    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/bin/odoo",
            "env": {
                "GEVENT_SUPPORT": "true"
            },
            "args": [
                "--config=/etc/odoo/odoo.conf",
                "--dev=xml"
            ],
        }
    ]
}